<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/note_item_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:padding="4dp"
    app:cardCornerRadius="@dimen/normal_margin"
    app:cardElevation="4dp"
    app:rippleColor="@color/purple5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/note_item_title"
            style="@style/NoteItemTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            tools:text="This is a note for example" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/note_item_content"
            style="@style/NoteItemTitleContentStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="12"
            tools:text="@tools:sample/lorem/random" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/note_item_date"
            style="@style/NoteItemTitleContentStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_calender"
            android:drawablePadding="4dp"
            android:maxLines="1"
            android:layout_gravity="end"
            android:textAlignment="textEnd"
            android:textColor="@color/purple4"
            android:textSize="12sp"
            app:drawableTint="@color/purple4"
            tools:text="dd-mm-yy" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>