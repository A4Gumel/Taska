<resources>
    <!-- Base application theme. -->
    <style name="Theme.Taska" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple5</item>
        <item name="colorPrimaryVariant">@color/purple2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow6</item>
        <item name="colorSecondaryVariant">@color/yellow2</item>
        <item name="colorOnSecondary">@color/purple5</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Taska.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenBackground">@color/yellow1</item>
        <item name="postSplashScreenTheme">@style/Theme.Taska</item>
    </style>

    <style name="NotesTitleStyle" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">@font/jetbrains_mono_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/purple5</item>
    </style>

    <style name="SearchInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="fontFamily">@font/jetbrains_mono_medium</item>
        <item name="boxBackgroundColor">@color/purple1</item>
        <item name="boxStrokeColor">@color/yellow6</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusBottomStart">24dp</item>
        <item name="boxCornerRadiusBottomEnd">24dp</item>
        <item name="boxCornerRadiusTopStart">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="colorControlNormal">@color/yellow6</item>
        <item name="backgroundColor">@color/purple1</item>
        <item name="startIconDrawable">@drawable/ic_search</item>
        <item name="startIconTint">@color/purple5</item>
    </style>

    <style name="ExtendedFabStyle" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="rippleColor">@color/purple4</item>
        <item name="fontFamily">@font/jetbrains_mono_regular</item>
        <item name="android:textColor">@color/yellow6</item>
        <item name="iconTint">@color/yellow6</item>
        <item name="backgroundColor">@color/purple5</item>
        <item name="background">@color/purple5</item>
        <item name="backgroundTint">@color/purple5</item>
        <item name="color">@color/purple5</item>
    </style>

    <style name="NoteItemTitleStyle" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="fontFamily">@font/jetbrains_mono_bold</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="NoteItemTitleContentStyle" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">@font/jetbrains_mono_regular</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="NoteTitleInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="fontFamily">@font/jetbrains_mono_medium</item>
        <item name="boxBackgroundColor">@color/purple1</item>
        <item name="boxStrokeColor">@color/yellow6</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusBottomStart">24dp</item>
        <item name="boxCornerRadiusBottomEnd">24dp</item>
        <item name="boxCornerRadiusTopStart">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="colorControlNormal">@color/yellow6</item>
        <item name="backgroundColor">@color/purple1</item>
        <item name="startIconTint">@color/purple5</item>
    </style>

</resources>